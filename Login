#include <stdio.h>
#include <ctype.h>
#include <locale.h>
#include <stdlib.h>
#include <windows.h>
#include <string.h>

int opcao, entre = 0, voltar = 0;
char nome[41], senha[16];

void login()
{
    printf("=======================================\n");
    printf("             \\\\\\ Login /// \n");
    printf("=======================================\n\n");
    printf("           1.Entrar\n");
    printf("           2.Criar conta\n");
    printf("           3.Sair\n\n");
    printf("=======================================\n\n");
    printf("Digite o número da opção desejada: ");
    scanf("%d", &opcao);

    getchar();
}
void criar_conta()
{
    FILE *conta;

    conta = fopen("conta.txt", "a");

    if(conta == NULL)
    {
      printf("\nErro\n!");

      return;
    }

    printf("=======================================\n");
    printf("          \\\\\\ Criar conta /// \n");
    printf("=======================================\n");
    printf("*Para sair digite 0 em nome ou senha*\n");
    printf("*O número máximo de caracteres para um\nnome é 40*\n");
    printf("*O número máximo de caracteres para uma\nsenha é 15*\n");
    printf("=======================================\n\n");

    printf("            Nome: ");
    fgets(nome, sizeof(nome), stdin);

    nome[strcspn(nome, "\n")] = 0;

    if(strcmp(nome, "0") == 0)
    {
      fclose(conta);
      system("cls");
    }
    else
    {
      printf("            Senha: ");
      fgets(senha, sizeof(senha), stdin);

      senha[strcspn(senha, "\n")] = 0;

      if(strcmp(senha, "0") == 0)
      {
        fclose(conta);
        system("cls");
      }
      else
      {
        fprintf(conta, "%s;%s\n", nome, senha);

        fclose(conta);

        printf("\n=======================================\n\n");
        printf("Sua conta foi criada com sucesso!");

        voltar = 1;

        Sleep(3000);
        system("cls");
      }
    }
}
char *entrar(char nc[41], char sc[16])
{
    FILE *conta;

    char linha[200], *nome, *senha;

    conta = fopen("conta.txt", "r");

    if(conta == NULL)
    {
      printf("\nAntes de entrar crie uma conta.");

      voltar = 1;
      entre = 1;

      Sleep(3000);
      system("cls");
    }
    else
    {
      printf("========================================\n");
      printf("             \\\\\\ Entrar /// \n");
      printf("========================================\n");
      printf("*Para sair digite 0 em nome ou senha*\n");
      printf("========================================\n\n");
      printf("            Nome: ");
      scanf("%[^\n]s", nc);

      getchar();

      if(strcmp(nc, "0") == 0)
      {
        fclose(conta);

        entre = 1;

        system("cls");
      }
      else
      {
        printf("            Senha: ");
        scanf("%s", sc);

        getchar();

        if(strcmp(sc, "0") == 0)
        {
          fclose(conta);

          entre = 1;

          system("cls");
        }
        else
        {
          while(fgets(linha, sizeof(linha), conta) != NULL)
          {
               linha[strcspn(linha, "\n")] = 0;

               nome = strtok(linha, ";");
               senha = strtok(NULL, ";");

               if((stricmp(nc, nome) == 0) && (stricmp(sc, senha) == 0))
               {
                 entre = 1;
               }
          }

          if(entre == 1)
          {
            printf("\n========================================\n\n");
            printf("Seu login foi feito com sucesso.");

            Sleep(3000);
            system("cls");
          }
          else
          {
            printf("\nO nome ou a senha esta errado.\n");

            Sleep(3000);
            system("cls");
          }
        }
      }
    }

    return nc, sc;
}

int main()
{
   FILE *conta;

   char nome_comparacao[41], senha_comparacao[16];

   setlocale(LC_ALL, "Portuguese");

   do
   {
     voltar = 0;
     entre = 0;

     login();

     switch(opcao)
     {
           case 1:
                  do
                  {
                    system("cls");
                    entrar(nome_comparacao, senha_comparacao);

                    strcpy(nome, nome_comparacao);
                    strcpy(senha, senha_comparacao);
                  }while(entre == 0);
           break;

           case 2:
                  system("cls");
                  criar_conta();
           break;

           case 3:
                  strcpy(nome, "1");
                  strcpy(senha, "1");
                  strcpy(nome_comparacao, "1");
                  strcpy(senha_comparacao, "1");

                  printf("\nObrigado pela sua visita! Saindo do programa...");

                  Sleep(6000);
                  system ("cls");
           break;

           default:
                  printf("\nEsta opção não existe, por favor escolha novamente.");

                  voltar = 1;

                  Sleep(4000);
                  system ("cls");
           break;
     }
   }while( (voltar == 1) || (strcmp(nome, "0") == 0 || strcmp(senha, "0") == 0) || (strcmp(nome_comparacao, "0") == 0 || strcmp(senha_comparacao, "0") == 0) );

   return 0;
}
